<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:rebound_effect="true"
    ohos:top_margin="50vp">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical">

        <Button
            ohos:id="$+id:share_image_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享图片"
            ohos:text_size="16fp"/>

        <Button
            ohos:id="$+id:share_text_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享文本"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:share_link_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享链接"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:share_music_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享音乐"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:share_video_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享视频"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:share_emoj_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享表情"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:share_small_program_btn"
            ohos:height="50vp"
            ohos:width="150vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="分享小程序"
            ohos:text_size="16fp"
            ohos:top_margin="16fp"/>
    </DirectionalLayout>
</ScrollView>
